include mixins/functions

doctype
html(lang="es")
    head
        include includes/head.pug


    body#page-home.theme-dark.page-header-textura

        header#CursoPresentacion.curso-presentacion.page-header
            .page-textura
                .container

                    include includes/page-home_topbar.pug

                    +pageHeader("Tema", "assets/images/header/header_media.svg", "")   

        section#ResultadosAprendizaje.curso-resultados.section.bg-base-light

            .container

                include includes/page-home_resultados.pug  

        section#IndiceTematico.curso-indice-tematico.section

            .container

                h2 Desarrollo de <br>contenidos
                .brand-line-primary

                .row.justify-content-center
                    .col-12.col-sm-10
                        .card.wow.flipInX(data-wow-delay=".4s")
                            .card-body
                                ul.list-group.list-group-flush.list.my-n3.nav-temas
                                    +navTemaItem('play', 'Introducción', '#introduccion')
                                    +navTemaItem('1', 'Reconocimiento de activos, pasivos, ingresos y gastos', '#tema-1')
                                    +navTemaItem('2', 'La probabilidad de obtener beneficios económicos futuros', '#tema-2')
                                    +navTemaItem('3', 'Fiabilidad de la Medición', '#tema-3')
                                    +navTemaItem('4', 'Definición entre partidas corrientes y no corrientes', '#tema-4')
                                    +navTemaItem('5', 'Ordenación y formato de las partidas del estado de información financiera', '#tema-5')
                                    +navTemaItem('6', 'Información a revelar en el estado de situación financiera y notas', '#tema-6')
                                    +navTemaItem('7', 'Presentación y estructura del estado de resultados', '#tema-7')
                                    +navTemaItem('8', 'Reconocimiento inicial de inversiones, cuentas por cobrar, propiedad, planta y equipo', '#tema-8')
                                    +navTemaItem('9', 'Ordenación y formato de las partidas del estado de información financiera', '#tema-9')
                                    +navTemaItem('10', 'Principio de reconocimiento comercial para todos los beneficios a los empleados', '#tema-10')
                                    +navTemaItem('11', 'Medición y presentación de los ingresos', '#tema-11')
                                    +navTemaItem('12', 'Estados de situación financiera de apertura', '#tema-12')
                                    +navTemaItem('13', 'Aplicación por primera vez de la norma de información financiera para microempresas', '#tema-13')
                                    +navTemaItem('question', 'Actividad didáctica', '#evaluacion')
                                    +navTemaItem('glosary', 'Glosario', '#glosario')
                                    +navTemaItem('folder', 'Material complementario', '#anexos')
                                    +navTemaItem('references', 'Referencias bibliográficas', '#referencias')


        section#mainContent         
            #introduccion
                include pages/intro.pug
            #tema-1
                include pages/1-tema.pug
            #tema-2
                include pages/2-tema.pug
            #tema-3
                include pages/3-tema.pug
            #tema-4
                include pages/4-tema.pug
            #tema-5
                include pages/5-tema.pug
            #tema-6
                include pages/6-tema.pug
            #tema-7
                include pages/7-tema.pug
            #tema-8
                include pages/8-tema.pug
            #tema-9
                include pages/9-tema.pug
            #tema-10
                include pages/10-tema.pug
            #tema-11
                include pages/11-tema.pug
            #tema-12
                include pages/12-tema.pug
            #tema-13
                include pages/13-tema.pug
            #evaluacion
                include pages/actividad-1.pug
            #glosario
                include pages/glosario.pug
            #anexos
                include pages/material-complementario.pug
            #referencias
                include pages/referencias.pug


        +creditosFooter("assets/images/logos/senaLogo.svg")


        a.scroll-to-top-btn
